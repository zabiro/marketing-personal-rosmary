<p id="notice"><%= notice %></p>

<h1>Pedidos</h1>

<table id="datatable" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Campana</th>
      <th>Placa</th>
      <th>Zona</th>
      <th>Ncaja</th>
      <th>Opciones</th>
     
    </tr>
  </thead>
  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.Nombre %></td>
        <td><%= pedido.Direccion %></td>
        <td><%= pedido.telefono %></td>
        <td><%= pedido.campana %></td>
        <td><%= pedido.placa %></td>
        <td><%= pedido.zona %></td>
        <td><%= pedido.ncaja %></td>
        <td><%= link_to 'Mostrar', pedido %>
        <%= link_to 'Editar', edit_pedido_path(pedido) %>
        <%= link_to 'Eliminar', pedido, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

